/* Estilos para la barra de navegacion */

nav{
    position: fixed;
    top: 0;
    width: 100%;
    background-color: rgb(107, 110, 100);
    padding-left: 5%;
    z-index: 1000; /* Asegura que la barra de navegación esté sobre otros elementos*/
    padding: 20%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    
}
nav ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    grid-gap: 10px;
    justify-content: center;
    padding-bottom: 10%;
    padding-top: 1%;
    margin: 0; /* Elimina el margen predeterminado de la lista */
}

nav ul li {

   padding-left: 10%;
}

nav a {
    color: white;
    text-decoration: none;
    font-size: 16px;
}
nav a:hover {
    text-decoration:none;
    background-color:darkolivegreen;
    margin: 1%;
    padding: 3%;
    opacity: 80%;
}

    /* Estilos para el logotipo en la barra de navegación */
#logo-navbar{
   
    display: none; /* Oculta el logotipo en la barra de navegación por defecto */
    margin-right: 50px; /* Ajusta el margen derecho para separar el logo del borde */
}

#navbar {
    background-color: rgb(107, 110, 100);
    padding: 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 100%; /* Ancho máximo del contenedor */
    margin: 0 auto; /* Centrar la barra de navegación horizontalmente */

}
#menu-items {
    list-style-type: none;
    margin-left: 10%;
    margin-right: 20%;
    padding: 0;
    display:flex;
   
   
}
  
#menu-items ul {
    
    margin: 0;
    padding: 0;
    display:flex;
   
}
#menu-items li {
    margin-right: 10px;
}
#menu-items li a {
    color: white;
    text-decoration: none;
    font-size: 16px;
}


#logo-navbar-image{
    /*border-radius: 50%;*/
    width: 30%;
    margin:0%;
    margin-right: 10px;
    margin-left: 10%;
    border-color:rgb(107, 110, 100) ;
    border-style:solid;
}
#logo-navbar ul{
display: row;
float: left;
position:absolute;
align-items: center;

}

    /* Estilos para la barra de navegación fija */
.sticky {

    position:fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
}

    /* Estilos para el menú de hamburguesa */
#menu-toggle {
    display: none; /* Ocultar el menú de hamburguesa por defecto */
    cursor: pointer;
}

.bar {
    width: 25px;
    height: 3px;
    background-color: white;
    margin: 5px 0;
}

.disabled-link {
    color: gray;
    pointer-events: none; /* Evita que el enlace sea clickeable */
    cursor: default; /* Cambia el cursor a predeterminado */
}

/* fin de los estilos barra de navegaciopn*/
    
