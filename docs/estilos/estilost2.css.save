/* Estilos para pantallas pequeñas */
@media only screen and (max-width: 510px) {
   
    /* Estilos para nav */
    #navbar {
        padding-left: 5%; /* Reduce el padding en pantallas pequeñas */
        flex-direction: row; /* Cambia la dirección del flexbox a columna */
        flex: 100%;        

    }

    #navbar ul {
        grid-template-columns: repeat(auto-fit, minmax(80px, 1fr)); /* Ajusta el tamaño de los elementos de la lista */
        grid-gap:30%; /* Reduce el espacio entre elementos de la lista */
        flex: 100%;        

    }

    #navbar a {
        padding: 1%; /* Aumenta el espacio alrededor de los enlaces */
        margin-top: 5%;
        font-size: x-large;
    }


    
        /* Añade estilos para el botón de hamburguesa */
        #menu-toggle {
            display: block; /* Mostrar el botón de hamburguesa */
           
        }
    
        /* Oculta los elementos de la barra de navegación en pantalla pequeña */
        #menu-items {
            display: none;
        }
    }
    
 
    /*tarjetas*/

@media only screen and (max-width: 510px) {
    #hide{
      display: none; /* Oculta el contenedor en pantallas pequeñas */
    }
    
    
    }
  
  /* pantallas medianas (tablets) y superiores */

